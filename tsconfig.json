{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"~*": ["./*"]
		},
		"strict": true,
		"target": "es6",
		"jsx": "react",
		"sourceMap": true,
		"module": "es2015",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"]
}

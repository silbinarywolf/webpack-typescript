{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"client/*": ["client/*"]
		},
		"strict": true,
		// NOTE(Jake): 2019-11-09
		// Might be worth moving "noUnusedLocals" to only
		// occur on production builds to avoid dev. friction.
		// eslint currently gets false positives when importing
		// types.
		//
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"pretty": true,
		"target": "es6",
		"jsx": "react",
		"sourceMap": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	}
}
